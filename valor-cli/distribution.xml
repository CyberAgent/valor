<assembly>
  <id>distribution</id>
  <formats>
    <format>tar.gz</format>
    <format>dir</format>
  </formats>
  <fileSets>
    <fileSet>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
        <include>NOTICE*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>conf</directory>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <fileSet>
      <directory>example</directory>
      <fileMode>0644</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <fileSet>
      <directory>bin</directory>
      <fileMode>0755</fileMode>
      <directoryMode>0755</directoryMode>
    </fileSet>
    <fileSet>
      <directory>../valor-fs/target/valor-fs-${project.version}</directory>
      <outputDirectory>plugins</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../valor-hbase/target/valor-hbase-${project.version}</directory>
      <outputDirectory>plugins</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>../valor-zookeeper/target/valor-zookeeper-${project.version}</directory>
      <outputDirectory>plugins</outputDirectory>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <unpack>false</unpack>
      <useTransitiveDependencies>true</useTransitiveDependencies>
    </dependencySet>
  </dependencySets>
</assembly>